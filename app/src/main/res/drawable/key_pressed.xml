    android:left="@dimen/key_bg_padding"
    android:top="@dimen/key_bg_padding"
    android:bottom="@dimen/key_bg_padding"
    android:right="@dimen/key_bg_padding">
    <solid
        android:color="@color/highlighted_bg" />
